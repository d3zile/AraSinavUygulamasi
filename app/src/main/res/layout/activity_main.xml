<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="#FF9800"
        android:drawableLeft="@drawable/icon_search"
        android:onClick="btnArama"
        android:padding="10dp"
        android:text="Film Ara"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="#FF9800"
        android:drawableLeft="@drawable/icon_fav"
        android:onClick="btnFavoriler"
        android:padding="10dp"
        android:text="FAVORİLER"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="#FF9800"
        android:drawableLeft="@drawable/icon_share"
        android:onClick="btnPaylasilanlar"
        android:padding="10dp"
        android:text="PAYLAŞIMLAR"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="#FF9800"
        android:drawableLeft="@drawable/icon_exit"
        android:onClick="btnCikis"
        android:padding="10dp"
        android:text="ÇIKIŞ"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>